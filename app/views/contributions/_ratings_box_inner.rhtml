<center>
	<% if logged_in? %>
		<p><small>Hover and click to rate</small></p>
		<div id="star-ratings-block">
			<%= render :partial => "ratings/rating", :locals => { :rateable => contributable, :controller => controller_name } %>
		</div>
		
		<% if (rating = contributable.user_rating(current_user)) %>
			<p style="font-size: 85%; font-weight: bold;">You rated it: <%= rating.rating %>/5</p>
		<% else %>
			<p style="font-size: 85%; font-weight: bold;"><i>You haven't rated yet</i></p>
		<% end %>
	<% else %>
		<p style="margin-top: 0.2em; font-size: 85%; font-weight: bold;">Current: <%= number_with_precision(contributable.rating, 2) %>/5 (<%= pluralize contributable.ratings.count, 'rating' %>)</p>
		<p><small><b><%= link_to "Log in", new_session_url -%></b> to rate and see breakdown of ratings</small></p>
	<% end %>
</center>