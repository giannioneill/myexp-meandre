<h2>Edit Moderatorships</h2>

<h3>Current Moderatorships</h3>

<ul><% @auth_users.each do |u| %>

<li><%= h User.find(u).profile.name %> 

<% unless Forum.find_by_id_and_owner_id(params[:id], u) %>

<%= link_to h("[remove]"), { :action => :destroy, :id => params[:id], :user_id => u }, :confirm => "Are you sure?" %>

<% else %>

(Owner)

<% end %></li>

<% end %></ul>

<h3>Add Moderatorships</h3>

<ul><% @unauth_users.each do |u| %>

<li><%= h User.find(u).profile.name %> 

<%= link_to h("[add]"), :action => :create, :id => params[:id], :user_id => u %></li>

<% end %></ul>