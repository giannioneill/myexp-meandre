<%= javascript_include_tag "osp.js" %>

<h1><%= _('Edit Forum') %></h1>

<% form_for :forum,
     :url  => forum_path(@forum),
     :html => { :method => :put } do |f| -%>

<% if @forum.owner?(current_user) %>

  <%= render :partial => "contributions/sharing_form",  :locals => { :edit => true, :contributable => @forum } %>

<% end %>
     
<%= render :partial => "form", :object => f %>

<p>
	<center>
		<%= submit_tag _('Update'), :or => link_to(_('Cancel'), forums_path), :disable_with => "Updating..." %>
	</center>
</p>
<% end -%>
