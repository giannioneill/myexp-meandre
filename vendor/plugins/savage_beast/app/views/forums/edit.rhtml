<div class="crumbs">
  <%= link_to "Forums", { :controller => "forums", :action => "index" } %> <span class="arrow">&rarr;</span>
</div>

<h1>Edit Forum</h1>

<% form_for :forum,
     :url  => { :controller => :forums, :action => :update },
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag "Save Forum", :or => link_to("Cancel", forums_path) %>
<% end -%>