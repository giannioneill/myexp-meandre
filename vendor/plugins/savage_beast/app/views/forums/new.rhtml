<%= javascript_include_tag "osp.js" %>

<h1><%= _('New Forum') %></h1>

<% form_for :forum, :url => forums_path do |f| -%>

  <%= render :partial => "contributions/sharing_form",  :locals => { :edit => false, :contributable => @forum } %>

  <%= render :partial => "form", :object => f %>
  
  <p>
  	<center>
  		<%= submit_tag _('Create'), :or => link_to(_('Cancel'), forums_path), :disable_with => "Creating..." %>
	</center>
  </p>
<% end -%>
