<% show = forum.authorized?("show", (logged_in? ? current_user : nil)) -%>
<table width="320" class="contributable">
  <tr>
    <% unless show %>
      <td width="50" rowspan="3">
        <%= image_tag("padlock.png") %>
      </td>
    <% end %>
    <th width="<%= show ? 320 : 270 %>" colspan="2">
      <%=h forum.name %>
    </th>
  </tr>
  <% if desc = forum.description_html %>
    <tr>
      <td colspan="2">
        <%= trim_body_html(desc, 200) %>
      </td>
    </tr>
  <% end %>
  <tr>
    <td>
      <strong>Topics:</strong> <%=h forum.topics_count %><br/>
      <strong>Posts:</strong> <%=h forum.posts_count %>
    </td>
    <td>
      <strong>Contributor:</strong><br />
      <%= contributor(forum.contribution.contributor_id, forum.contribution.contributor_type, true, 60) %>
    </td>
  </tr>
  <tr>
    <td colspan="<%= show ? 2 : 3 %>">
      <% if forum.authorized?("show", (logged_in? ? current_user : nil)) %><%= icon "show", forum_path(forum) %> <% end %>
      <% if logged_in? and forum.authorized?("edit", current_user) %><%= icon "edit", edit_forum_path(forum) %> <% end %>
      <% if logged_in? and forum.authorized?("destroy", current_user) %><%= icon "destroy", forum_path(forum), nil, :confirm => 'Are you sure?', :method => :delete %><% end %>
    </td>
  </tr>
</table>
