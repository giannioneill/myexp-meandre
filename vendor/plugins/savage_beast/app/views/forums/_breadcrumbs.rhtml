<li><%= link_to 'Forums', forums_path %></li>

<% if ["show", "new", "edit"].include? controller.action_name.to_s %>
  <li><b>&#187;</b></li>
  
  <% case controller.action_name.to_s; when "show" %>
    <li><%= link_to "View: #{h(@forum.name)}", forum_path(@forum) %></li>
  <% when "new" %>
    <li><%= link_to "Create Forum", new_forum_path %></li>
  <% when "edit" %>
    <li><%= link_to "Edit: #{h(@forum.name)}", edit_forum_path(@forum) %>
  <% else %>
    <!-- no breadcrumb -->
  <% end %>
<% end %>
